body{
	font-family : myFont;
}
@font-face{font-family: myFont; src: url('../fonts/Futura-Book.otf');}
@font-face{font-family: myFontL; src: url('../fonts/Futura-Light.otf');}
@font-face{font-family: myFontB; src: url('../fonts/Bebasneue Regular.ttf');}



.clearfloat{clear: both;}
ul{margin: 0; padding: 0;}
li{list-style: none;list-style: none;}
.main {padding: 50px 0;}

.header{ width: 100%; padding: 10px 40px; position: fixed; top: 0; left: 0; right: 0;background-color: #fff; z-index: 999; border-bottom: 1px solid #ccc;}
.header a{color: #000;}
.header .logo{display: inline-block;}
.header .logo img{float: left; height: 47px;}
.header .headerFr{display: inline-block; /*margin-top: 8px;*/ font-size: 16px;}
.header .headerFr ul{float: left; line-height: 40px;}
.header .headerFr ul li{float: left;display: inline-block;}
.header .headerFr ul li a{font-size: 16px; display: inline-block; padding: 0 20px;text-decoration: none;}
.header .headerFr ul li a:hover,.header .navProduct a:hover{color: #FC3D39;}
.header .header-img{width: 32px;}
.header .header-img:hover{content: url('../images/icon/plan-red.png');}


.mobile_header {display: none; position: fixed; top: 0; left: 0;background-color: #fff; z-index: 999; border-bottom: 1px solid #ccc; width: 100%;}
.mobile_header a{color: #000;}
.mobile_header .navbtn{height: 100px;padding: 25px 30px;}

.mobile_header .logo img{float: left; height: 50px;}
.mobile_header .menu img{float: right; height: 50px;}
.mobile_header .headerFr{margin-top: 8px; font-size: 16px; height: 0px; overflow: hidden;}

.mobile_header .headerFr ul{line-height: 40px;}
.mobile_header .headerFr ul li{display: block;}
.mobile_header .headerFr ul li a{font-size: 16px; display: inline-block; padding: 0 30px;text-decoration: none;}
.mobile_header .headerFr ul li a:hover,.header .navProduct a:hover{color: #FC3D39;}
.mobile_header .header-img{width: 35px;}
.mobile_header .header-img:hover{content: url('../images/icon/plan-red.png');}

/*  BANNER  */
.index-banner{background: url('../images/banner.jpg') top center no-repeat;background-size: cover;text-align: center;}
.index-banner:after{content: ''; display: block; padding: 6%;}
.index-banner .banner-title{color: #fff; font-size: 60px; padding-top: 196px; font-family: myFontB;}
.index-banner .banner-btn a{color: #FC3D39; background-color: #fff; font-size: 20px; line-height: 48px; text-decoration: none; display: inline-block; border: 4px solid #fff;margin-top: 68px; padding: 0 50px;}
.index-banner .banner-btn a:hover{color: #fff; border: 4px solid #FC3D39; background-color: #FC3D39;}

/*  ABOUT  */
#about {background-color: #060404;}
#about .item{width: 60%; float: left; padding: 50px 0;}
#about .index-title{display: none}
.rotate-title{color: #FC3D39; border-left: 4px solid #FC3D39; font-size: 42px; padding: 0 20px; transform: rotate(90deg); display: inline-block; line-height: 37px; position: relative; top: 70px; left: -20px;}
#about .text{font-size: 18px; font-family: myFont;}
#about .text p{margin-bottom: 25px; color: #fff;}
#about .about-img{width: 380px; height: 497px; }


#team .index-title{display: none;}
#team .rotate-title{padding: 0 20px;margin-left: -50px; float: left; top: 85px;}
#team,#advisor{padding: 0 150px 50px; background-color: #060404;}
.index-title{color: #FC3D39; font-size: 32px; margin-bottom: 50px;}
.item{margin-bottom: 45px; font-size: 16px; line-height: 25px;}
.team-img{width: 140px;}
.name{font-weight: bold; font-size: 20px;}
#team .position{line-height: 32px; font-weight: bold; font-size: 20px;}
.row .introduce{margin-top: 8px; font-family: myFontL;height: 100px; font-size: 16px;}
#team .ellips{font-size: 16px; display: -webkit-box; overflow: hidden; white-space: normal; text-overflow: ellipsis; word-wrap: break-word; -webkit-line-clamp: 4; -webkit-box-orient: vertical;padding-bottom: 20px;}
#team .infor{height: 200px;}


.team-item{position: relative; padding-bottom : 20px; color: #fff;}
.team-item input[type=checkbox]{position: absolute; bottom: 0px; opacity: 0; width: 100%; height: 20px; z-index: 99;}
.team-item .icon-down{position: absolute; bottom: 0px; left: 50%; color: #FC3D39;z-index: 1; -webkit-transform : rotate(0deg);transform: rotate(0deg);}
.team-item input[type=checkbox]:checked+.icon-down{-webkit-transform : rotate(-180deg);transform: rotate(-180deg);}
#team .link-img{width: 30px; margin-left: 16px;}
#team .link-img:hover{content: url('../images/icon/link-hover.png');}


/*  advisor  */
#advisor{background-color: #fff; color: #fff; padding-top: 80px; padding-bottom: 40px;}
#advisor .index-title{display: none;}
#advisor .rotate-title,#media .rotate-title{padding: 0 20px;margin-left: -50px; float: left;}
#advisor .team-inner{margin-left: 20px; color: #000;}
#advisor .team-inner .name{font-size: 20px;}
#advisor .link-img{width: 30px; margin-left: 16px;}
#advisor .link-img:hover{content: url('../images/icon/link-hover.png');}
#advisor .advisor-position,#advisor .advisor-introduce{margin-top: 20px; font-size: 18px; font-family: myFontL;}


/*  media  */
#media{background-color: #fff; }
#media .media-title{color: #000; font-size: 16px; line-height: 60px;}
#media a{text-decoration: none;}
#media .index-title{display: none}
#media .media-img{background: url('../images/media-img.jpg') no-repeat; background-size: 100% auto;}
#media .media-img:after{content: ''; display: block; padding: 22%;}

/*  block chain  */
#block{padding-bottom: 50px;}
#block .index-title{display: none}
#block .block-img{padding: 0; margin: 0 auto;}
#block .block-chain{background: url('../images/block-chain.png') no-repeat; background-size: 100% auto; height: 450px;}
#block .block-chain:after{content: ''; display: block; padding: 54% 10%;}


/*  road map  */
#map{background-color: #060404; padding: 58px 0; text-align: center; color: #fff; font-family: myFont;}
#map .map-title{font-size: 60px; color: #FC3D39;}
#map .map-content{font-size: 22px; margin-top: 38px;}
#map span.map-space{width: 60px;}


/*  FOOTER  */
.footer{padding: 50px 0; font-size: 16px; color: #000; background-color: #fff;}
.footer .address{margin-bottom: 45px;}
.footer .footer-left{width: 569px; float: left; padding-left: 100px;}
.footer .footer-right{width: 569px; float: right; text-align: right; padding-right: 100px;}
.footer .logo-img{width: 60px; height: 60px;}
.footer .other-img{width: 35px; height: 35px; margin: 14px 0px 14px 30px;}
.footer .download{text-decoration: none; color: #000;}
.footer .download .text{border: 1px solid #000; width: 280px; line-height: 45px; text-align: center; font-size: 16px;}
.footer .download .footer-icon{width: 28px; height: 28px; margin-right: 10px; margin-top: -5px;}
.footer .download:hover{color: #FC3D39;}
.footer .download:hover .text{border-color: #FC3D39;}
.footer .download:hover .footer-icon{content: url('../images/icon/list-red.png');}


@media only screen and (min-width: 768px) and (max-width: 980px) {
	.item{margin-bottom : 20px;}
	#team .infor{height: 100%;}
	#about .item{width: 100%;}
	#about .item .text{width: 100%;}
	#about .item-img{display: none;}
	#advisor .rotate-title,#about .rotate-title,#media .rotate-title, #block .rotate-title,#team .rotate-title{display: none;}
	#advisor .index-title,#about .index-title,#media .index-title,#block .index-title,#team .index-title{display: block;}
	#team,#advisor,#media,#about,#block{padding-left: 40px; padding-right: 40px;}
	.footer .footer-left,.footer .footer-right{padding: 0;}
	#block .block-img{padding: 0px;}
}
@media only screen and (min-width: 375px) and (max-width: 768px) {
	.header{display: none;}
	.mobile_header {display: block;}
	.item{margin-bottom : 20px;}
	#team .infor{height: 100%;}
	.index-banner .banner-title{font-size: 2.875em;}
	.index-banner .banner-btn a{font-size: 1.25em; margin-top: 50px;}
	.index-title{margin-bottom: 40px}
	#advisor .introduce{height: 50px;}
	#advisor .item{margin-bottom: 40px;}
	#advisor .team-inner{margin: 0;}
	#about .item{width: 100%; margin: 0;}
	#about .item .text{width: 100%;}
	#about .item .text p{margin-bottom: 20px;}
	#about .item-img{display: none;}
	#block{padding-bottom: 50px; padding-left: 0px; padding-right: 0px;}
	#block .block-img{padding: 0px;}
	#block .index-title{padding-left: 40px;}
	#map{padding: 28px 0;}
	#map .map-title{font-size: 24px;}
	#map .map-content{font-size: 18px; margin-top: 20px;}
	#map span{width: 16px;}
	#map span.map-space{width: 40px;}
	#advisor .rotate-title,#about .rotate-title,#media .rotate-title, #block .rotate-title,#team .rotate-title{display: none;}
	#advisor .index-title,#about .index-title,#media .index-title,#block .index-title,#team .index-title{display: block;}
	#team,#advisor,#media,#about{padding-left: 40px; padding-right: 40px;}
	#team .row .introduce{height: 160px;}
	#team .row-style .introduce:nth-child(3){height: 100px;}
	#team .padding-style .introduce:nth-child(3){height: 180px;}
	.team-img{margin-bottom: 20px;}
	.footer .footer-left{ float: left;padding-left : 0; width: 100%;}
	.footer .footer-right{text-align: center; width: 100%;padding-right:0;margin-top: 20px;}
	.footer .float-right{float: right; width: 70%; margin-bottom: 70px;}
	.footer .download .text{margin: 0 auto;}
}
