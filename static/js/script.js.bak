		function IsPC()
			{
				var userAgentInfo = navigator.userAgent;
				var Agents = new Array("Android", "iPhone", "SymbianOS", "Windows Phone", "iPad", "iPod");
				var flag = true;
				for (var v = 0; v < Agents.length; v++) {
					if (userAgentInfo.indexOf(Agents[v]) > 0) { flag = false; break; }
				}
				return flag;
			}


//中英文切换
		var type=navigator.appName
		if (type=="Netscape"){
		var lang = navigator.language
		}
		else{
		var lang = navigator.userLanguage
		}
		//取得浏览器语言的前两个字母
		var lang = lang.substr(0,2)
		setLang(lang);	
		
		
		$('.langToggle').on('click',function(){
			$('.langToggle').next().fadeToggle('fast');
			$('.chooseLang span').on('click',function(){
				lang = $(this).attr('data');
				setLang(lang);
			});
		});
		
		
		function setLang(lang){
			$('.lang-box .chooseLang').hide();
			if(lang == 'en'){
				$('.langToggle').html('English');
				$('.changeLang .zh').hide();
				$('.changeLang .en').show();
				
			}else{
				$('.langToggle').html('中文');
				$('.changeLang .en').hide();
				$('.changeLang .zh').show();
			}
		}
		
	var navProduct = $('.navProduct');
		$('.moreProduct').on('mouseover',function(){
			navProduct.show();
			if(navProduct.display != 'none'){
				navProduct.on('mouseleave',function(){
					navProduct.hide();
			});
		}
	});
	

	
